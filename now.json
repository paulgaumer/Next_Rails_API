{
  "version": 2,
  "build": {
    "env": {
      "BUILDING_FOR_NOW": "true",
      "API_HOST": "@api-host"
    }
  },
  "builds": [
    { "src": "dashboard/package.json", "use": "@now/next" },
    { "src": "landing/package.json", "use": "@now/next" }
  ],
  "routes": [
    { "src": "/dashboard/_next(.*)", "dest": "dashboard/_next$1" },
    { "src": "/dashboard(.*)", "dest": "dashboard/dashboard$1" },
    { "src": "(.*)", "dest": "landing$1" }
  ]
}
